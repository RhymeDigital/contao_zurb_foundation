<?php $isFirstLevel = stripos($this->level, 'level_1') !== false; ?>
<ul class="<?php if ($isFirstLevel): echo 'right '; else : echo 'dropdown '; endif; echo $this->level; ?>"<?php if($isFirstLevel): echo ' data-dropdown-menu'; endif; ?>>
  <?php foreach ($this->items as $item): ?>
  <?php if($item['isActive']): $item['class'] .= (!empty($item['class']) ? ' ' : '') . 'active'; endif; ?>
  <?php if(!empty($item['subitems'])): $item['class'] .= (!empty($item['class']) ? ' ' : '') . 'has-dropdown'; endif; ?>
      <li<?php if ($item['class'] || $item['isActive']): ?> class="<?php echo $item['class']; ?>"<?php endif; ?>><a href="<?php echo $item['href']; ?>" title="<?php echo $item['title']; ?>"<?php if ($item['class']): ?> class="<?php echo $item['class']; ?>"<?php endif; ?><?php if ($item['accesskey'] != ''): ?> accesskey="<?php echo $item['accesskey']; ?>"<?php endif; ?><?php if ($item['tabindex']): ?> tabindex="<?php echo $item['tabindex']; ?>"<?php endif; ?><?php if ($item['nofollow']): ?> rel="nofollow"<?php endif; ?><?php echo $item['target']; ?>><?php echo $item['link']; ?></a><?php echo $item['subitems']; ?></li>
  <?php endforeach; ?>
</ul>
